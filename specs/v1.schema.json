{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Skin spec version 1",
  "type": "object",
  "properties": {
    "version": {
      "description": "Spec version",
      "type": "integer",
      "minimum": 1,
      "maximum": 1
    },
    "sprites": {
      "description": "Sprites",
      "type": "array",
      "items": {
        "$ref": "#/$defs/sprite"
      }
    }
  },
  "required": [
    "version",
    "sprites"
  ],
  "$defs": {
    "sprite": {
      "description": "Sprite",
      "type": "object",
      "properties": {
        "name": {
          "description": "Filename",
          "type": "string"
        },
        "blank": {
          "description": "If blank image",
          "type": "boolean"
        },
        "src": {
          "description": "Source SVG",
          "type": "string"
        },
        "width": {
          "description": "SD width",
          "type": "number"
        },
        "height": {
          "description": "SD height",
          "type": "number"
        }
      },
      "required": [
        "name"
      ]
    }
  }
}
